    booktitle = {2017 IEEE SmartWorld, Ubiquitous Intelligence and Computing, Advanced and Trusted Computed, Scalable Computing and Communications, Cloud and Big Data Computing, Internet of People and Smart City Innovation (SmartWorld/SCALCOM/UIC/ATC/CBDCom/IOP/SCI)}, 
    title     = {{UAV}Fog: A {UAV}-based fog computing for Internet of Things}, 
    year      = {2017},
